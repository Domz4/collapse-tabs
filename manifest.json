{
  "manifest_version": 2,
  "name": "collapse tab",
  "version": "1.0",
  "permissions": ["tabs"],
  "browser_action": {
    "default_popup": "popup.html"
  },

  "description": "groups tabs and collapses them into one",
  "icons": {
    "96": "icons/icons8-accordion-96.png"
  },
  "background": {
    "scripts": ["/src/background.js"],
    "persistent": false
  }
}
